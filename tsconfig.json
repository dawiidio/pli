{
  "exclude": ["**/*.spec.ts"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "types": [
      "vitest/globals",
      "node"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "rootDir": "src",
    "module": "NodeNext",
    "moduleResolution": "Node",
    "outDir": "lib",
    "target": "ES2022"
  }
}
